<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/ic_back"
        app:tint="@color/icons"
        />

    <ImageView
        android:id="@+id/profileImageIV"
        android:layout_width="96dp"
        android:layout_height="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIV"
        android:layout_marginTop="32dp"
        android:background="@drawable/circular_image"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        />
    <TextView
        android:id="@+id/profileNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliza"
        app:layout_constraintTop_toBottomOf="@id/profileImageIV"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/activityStatusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profileNameTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gray"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/BioTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bio"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activityStatusTV"
        android:layout_marginTop="24dp"
        android:layout_marginStart="18dp"
        />
    <TextView
        android:id="@+id/myBioTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:text="Product Designer"
        app:layout_constraintTop_toBottomOf="@id/BioTV"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        />
    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myBioTV"
        android:layout_marginHorizontal="18dp"
        android:background="@color/icons"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div1"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        />
    <TextView
        android:id="@+id/myUsernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elizabet1968"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameTV"
        android:layout_marginTop="4dp"
        android:layout_marginStart="18dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <View
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myUsernameTV"
        android:layout_marginHorizontal="18dp"
        android:background="@color/icons"
        android:layout_marginTop="12dp"
        />

    <ImageView
        android:id="@+id/groupChatIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/invitefriends"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div2"
        app:layout_constraintBottom_toTopOf="@id/div3"
        android:layout_marginStart="18dp"
        />

    <TextView
        android:id="@+id/createGroupChatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_a_group_chat"
        app:layout_constraintStart_toEndOf="@id/groupChatIV"
        app:layout_constraintTop_toBottomOf="@id/div2"
        android:layout_marginStart="18dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        />
    <View
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createGroupChatTV"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="18dp"
        android:background="@color/icons"
        />

    <TextView
        android:id="@+id/mediaTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div3"
        android:text="@string/media"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="18dp"
        android:layout_marginVertical="18dp"

        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/galleryRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mediaTV" />
    <!-- Po tri slike u jednom itemu -->



</androidx.constraintlayout.widget.ConstraintLayout>

</layout>