<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Contact Image -->
        <ImageView
            android:id="@+id/contactImageIV"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/default_profile_picture"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clipToOutline="true"
            android:background="@drawable/circular_image" />

        <!-- Contact Full Name -->
        <TextView
            android:id="@+id/contactFullNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/contactImageIV"
            app:layout_constraintTop_toTopOf="@id/contactImageIV"
            app:layout_constraintBottom_toBottomOf="@id/contactImageIV"
            app:layout_constraintEnd_toStartOf="@id/selectCircleIV"
            android:layout_marginStart="12dp" />



        <!-- Selection Circle -->
        <ImageView
            android:id="@+id/selectCircleIV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/icons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
