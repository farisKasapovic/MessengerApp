<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    >

    <TextView
        android:id="@+id/EditProfileTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/account"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"

        />
    <TextView
        android:id="@+id/LogOutTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/EditProfileTV"
        android:textColor="@color/blueText"
        android:layout_marginEnd="16dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/profileImageIV"
        android:layout_width="96dp"
        android:layout_height="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/EditProfileTV"
        android:layout_marginTop="32dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/circular_image"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        />

    <TextView
        android:id="@+id/firstNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mojtaba"
        app:layout_constraintStart_toEndOf="@id/profileImageIV"
        app:layout_constraintTop_toTopOf="@id/profileImageIV"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/lastNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/firstNameTV"
        android:text="Navade"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/firstNameTV"
        app:layout_constraintBottom_toBottomOf="@id/firstNameTV"
        android:layout_marginStart="6dp"
        />
    <TextView
        android:id="@+id/phoneNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profileImageIV"
        app:layout_constraintTop_toTopOf="@id/profileImageIV"
        app:layout_constraintBottom_toBottomOf="@id/profileImageIV"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="+98 911 682 8684"
        />
    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mojtabatn"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/profileImageIV"
        app:layout_constraintBottom_toBottomOf="@id/profileImageIV"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="2dp"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
</layout>