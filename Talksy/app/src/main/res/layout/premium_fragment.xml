<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Toolbar -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/done_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_margin="16dp"/>

    <TextView
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"/>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_placeholder_profile"
        android:scaleType="centerCrop"
        android:background="@drawable/profile_image_background"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"/>

    <TextView
        android:id="@+id/add_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Photo"
        android:textSize="14sp"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="8dp"/>

    <!-- First Name -->
    <EditText
        android:id="@+id/first_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="First name"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/add_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/last_name"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintEnd_margin="4dp"/>

    <!-- Last Name -->
    <EditText
        android:id="@+id/last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Last name"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="@id/first_name"
        app:layout_constraintStart_toEndOf="@id/first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="4dp"/>

    <!-- Bio -->
    <EditText
        android:id="@+id/bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/first_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="16dp"/>

    <!-- Phone Number Section -->
    <TextView
        android:id="@+id/phone_number_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+98 911 682 8684"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/text_background"
        app:layout_constraintTop_toBottomOf="@id/bio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/change_phone_number"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintEnd_margin="4dp"/>

    <TextView
        android:id="@+id/change_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/phone_number_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Username Section -->
    <TextView
        android:id="@+id/username_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@mojtabatn"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@drawable/text_background"
        app:layout_constraintTop_toBottomOf="@id/phone_number_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/change_username"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintEnd_margin="4dp"/>

    <TextView
        android:id="@+id/change_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/username_label"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textColor="@color/red"
        android:background="@drawable/button_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/username_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_margin="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
