<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--Pogledati CardView? -->
    <ImageView
        android:id="@+id/pictureIV"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:background="@color/icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/pictureIV"
        app:layout_constraintTop_toTopOf="@id/pictureIV"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/username"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"

        />
    <TextView
        android:id="@+id/textMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pictureIV"
        app:layout_constraintBottom_toBottomOf="@id/pictureIV"
        android:textSize="14sp"
        android:text="@string/this_is_a_message"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/specialIconIV"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toEndOf="@id/usernameTV"
        app:layout_constraintTop_toTopOf="@id/usernameTV"
        app:layout_constraintBottom_toBottomOf="@id/usernameTV"
        android:layout_marginStart="16dp"
        android:background="@color/icons"
        />

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/_04_20_am"
        app:layout_constraintBottom_toBottomOf="@+id/usernameTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/usernameTV" />

    <TextView
        android:id="@+id/textNumbersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textMessageTV"
        app:layout_constraintBottom_toBottomOf="@id/textMessageTV"
        android:layout_marginEnd="16dp"
        android:text="24"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pictureIV"
        android:layout_marginTop="16dp"
        android:background="@color/icons"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toStartOf="@id/timeTV"
        app:layout_constraintTop_toTopOf="@id/timeTV"
        app:layout_constraintBottom_toBottomOf="@id/timeTV"
        android:background="@color/icons"
        android:layout_marginEnd="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>